services:
  server:
    image: mitre/heimdall2:release-latest
    container_name: heimdall2-server
    restart: unless-stopped
    env_file: .env
    environment:
      - PORT=3001
    expose:
      - "3001"
    networks:
      - heimdall2-network

  nginx:
    image: nginx:alpine
    container_name: heimdall2-nginx
    restart: unless-stopped
    environment:
      NGINX_HOST: ${NGINX_HOST}
    volumes:
      - ./nginx/conf/:/etc/nginx/templates/
    ports:
      - "8080:80"
      - "8443:443"
    depends_on:
      - server
    networks:
      - heimdall2-network

# Removed cert_bundles volume - not needed for basic setup

networks:
  heimdall2-network:
    driver: bridge